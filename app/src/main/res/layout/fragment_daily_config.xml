                android:layout_marginRight="@dimen/row_right_margin_1"
                />

            <Spinner
                android:id="@+id/thursday_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:popupBackground="@color/colorBackgroudPopup"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:text="Friday"
                android:layout_marginLeft="@dimen/row_intent_1"
                android:layout_marginRight="@dimen/row_right_margin_1"
                />

            <Spinner
                android:id="@+id/friday_spinner"
                android:layout_width="wrap_content"
